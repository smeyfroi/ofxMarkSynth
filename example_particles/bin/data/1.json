{
  "version": "1.0",
  "name": "Particles Synth",
  "description": "Particles example number 1",
  "agency": 0.5,
  
  "drawingLayers": {
    "foreground": {
      "size": [1024, 1024],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Random Point": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "10.0"
      }
    },
    "Random Color": {
      "type": "RandomHslColor",
      "config": {
        "CreatedPerUpdate": "0.1"
      }
    },
    "Particles": {
      "type": "ParticleSet",
      "config": {
        "colourMultiplier": "0.5",
        "particleDrawRadius": "1.0",
        "maxSpeed": "5.0"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "Alpha": "0.01"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Random Point.Vec2 -> Particles.Point",
    "Random Color.Vec4 -> Particles.Colour"
  ],
  
  "intents": {
    "Calm": {
      "energy": 0.2,
      "density": 0.3,
      "structure": 0.7,
      "chaos": 0.1,
      "granularity": 0.1
    },
    "Energetic": {
      "energy": 0.9,
      "density": 0.7,
      "structure": 0.4,
      "chaos": 0.5,
      "granularity": 0.5
    }
  }
}

