{
  "version": "1.0",
  "description": "Simple example with random points that fade on a drawing layer",
  
  "drawingLayers": {
    "foreground": {
      "size": [1080, 1080],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Random Points": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "1.0"
      }
    },
    "Circles": {
      "type": "SoftCircle",
      "config": {
        "Colour": "0.6,0.7,0.2,1.0",
        "ColourMultiplier": "1.0",
        "AlphaMultiplier": "1.0",
        "Softness": "0.4",
        "Radius": "0.125"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "HalfLifeSec": "2.3"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Random Points.Vec2 -> Circles.Point"
  ]
}
