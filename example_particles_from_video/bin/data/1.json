{
  "version": "1.0",
  "description": "Video Particles example number 1",
  "agency": 0.5,
  
  "drawingLayers": {
    "foreground": {
      "size": [1920, 1080],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Random Color": {
      "type": "RandomHslColor",
      "config": {
        "CreatedPerUpdate": "0.1"
      }
    },
    "Video Flow": {
      "type": "VideoFlowSource",
      "config": {
      }
    },
    "Particles": {
      "type": "ParticleSet",
      "config": {
        "colourMultiplier": "0.5",
        "particleDrawRadius": "1.0",
        "maxSpeed": "5.0",
        "Spin": 0.01,
        "connectionRadius": 0.1
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "Alpha": "0.01"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Video Flow.PointVelocity -> Particles.PointVelocity",
    "Random Color.Vec4 -> Particles.Colour"
  ]
}
