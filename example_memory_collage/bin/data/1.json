{
  "version": "1.0",
  "description": "Memory Collage example - uses memory bank to store and emit textures",
  "agency": 1.0,
  
  "drawingLayers": {
    "foreground": {
      "size": [4800, 4800],
      "internalFormat": "GL_RGBA8",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": true,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Timer": {
      "type": "TimerSource",
      "config": {
        "Interval": "2",
        "Enabled": "1"
      }
    },
    "AudioData": {
      "type": "AudioDataSource"
    },
    
    "Random Point": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "0.5"
      }
    },
    
    "Particles": {
      "type": "ParticleSet",
      "layers": {
        "default": ["foreground"]
      }
    },
    
    "Path": {
      "type": "Path",
      "config": {
        "TriggerBased": "true"
      }
    },
    
    "Random Color": {
      "type": "RandomHslColor",
      "config": {
        "CreatedPerUpdate": "0.01"
      }
    },
    "Collage": {
      "type": "Collage",
      "layers": {
        "default": ["foreground"]
      }
    },
    
    "Fade": {
      "type": "Fade",
      "config": {
        "Alpha": "0.003"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Random Point.Vec2 -> Particles.Point",
    "Random Point.Vec2 -> Path.Point",
    "Timer.Tick -> .MemorySave",
    "AudioData.Onset1 -> .MemoryEmitRandom",
    "AudioData.Onset1 -> Path.Trigger",
    ".Memory -> Collage.SnapshotTexture",
    "Path.Path -> Collage.Path",
    "Random Color.Vec4 -> Collage.Colour"
  ]
}
