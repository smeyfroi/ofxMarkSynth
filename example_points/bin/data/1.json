{
  "version": "1.0",
  "name": "Points Synth",
  "description": "Points example number 1",
  
  "synth": {
    "agency": 1.0,
    "backgroundColor": "0.0, 0.0, 0.0, 1",
    "backgroundMultiplier": 0.1
  },

  "drawingLayers": {
    "foreground": {
      "size": [768, 768],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    },
    "fluid_velocity": {
      "size": [768, 768],
      "internalFormat": "GL_RG32F",
      "wrap": "GL_REPEAT",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_DISABLED",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": false
    }
  },

  "mods": {
    "Random Radius": {
      "type": "RandomFloatSource",
      "config": {
        "CreatedPerUpdate": "0.1",
        "Min": "0.01",
        "Max": "0.1"
      }
    },
    "Random Point": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "2.0"
      }
    },
    "Random Color": {
      "type": "RandomHslColor",
      "config": {
        "CreatedPerUpdate": "0.5"
      }
    },
    "Circle": {
      "type": "SoftCircle",
      "config": {
        "ColourMultiplier": "1.0",
        "AlphaMultiplier": "1.0",
        "Softness": "0.0"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Random Impulse Point": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "0.5"
      }
    },
    "Impulse": {
      "type": "FluidRadialImpulse",
      "config": {
        "Impulse Radius": "0.15",
        "Impulse Strength": "0.3"
      },
      "layers": {
        "default": ["fluid_velocity"]
      }
    },
    "Fluid": {
      "type": "Fluid",
      "config": {
        "dt": "0.01"
      },
      "layers": {
        "default": ["foreground"],
        "velocities": ["fluid_velocity"]
      }
    }
  },
  
  "connections": [
    "Random Radius.Float -> Circle.Radius",
    "Random Point.Vec2 -> Circle.Point",
    "Random Color.Vec4 -> Circle.Colour",
    "Random Impulse Point.Vec2 -> Impulse.Point"
  ],
  
  "intents": {
    "Calm": {
      "energy": 0.2,
      "density": 0.3,
      "structure": 0.7,
      "chaos": 0.1,
      "granularity": 0.1
    },
    "Energetic": {
      "energy": 0.9,
      "density": 0.7,
      "structure": 0.4,
      "chaos": 0.5,
      "granularity": 0.5
    }
  }
}
