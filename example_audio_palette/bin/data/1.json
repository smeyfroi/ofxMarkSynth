{
  "version": "1.0",
  "name": "Audio Palette Synth 1",
  "description": "Audio Palette example number 1",
  
  "drawingLayers": {
    "foreground": {
      "size": [768, 768],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    },
    "particles": {
      "size": [768, 768],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": true,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Audio": {
      "type": "AudioDataSource",
      "config": {
        "MinPitch": "50.0",
        "MaxPitch": "800.0",
        "MinRms": "0.0005",
        "MaxRms": "0.02"
      }
    },
    "Palette": {
      "type": "SomPalette"
    },
    "Circle": {
      "type": "SoftCircle",
      "config": {
        "ColourMultiplier": "1.0",
        "AlphaMultiplier": "0.5",
        "Radius": "0.05",
        "Softness": "0.8"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "Alpha": "0.0001"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Particles": {
      "type": "ParticleField",
      "layers": {
        "default": ["particles"]
      }
    }
  },
  
  "connections": [
    "Audio.Spectral3dPoint -> Palette.Sample",
    "Audio.PitchRmsPoint -> Circle.Point",
    "Palette.Random -> Circle.Colour",
    "Palette.FieldTexture -> Particles.Field1Texture"
  ],
  
  "intents": {
    "Calm": {
      "energy": 0.2,
      "density": 0.3,
      "structure": 0.7,
      "chaos": 0.1,
      "granularity": 0.1
    },
    "Energetic": {
      "energy": 0.9,
      "density": 0.7,
      "structure": 0.4,
      "chaos": 0.5,
      "granularity": 0.5
    }
  }
}
