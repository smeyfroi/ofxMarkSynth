{
  "version": "1.0",
  "description": "Collage example number 1",
  "agency": 1.0,
  
  "drawingLayers": {
    "foreground": {
      "size": [1200, 1200],
      "internalFormat": "GL_RGBA8",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": true,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Random Point": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "0.5"
      }
    },
    "Particles": {
      "type": "ParticleSet",
      "layers": {
        "default": ["foreground"]
      }
    },
    "Snapshot": {
      "type": "PixelSnapshot",
      "config": {
        "Size": "192,192"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Path": {
      "type": "Path"
    },
    "Random Color": {
      "type": "RandomHslColor",
      "config": {
        "CreatedPerUpdate": "0.01"
      }
    },
    "Collage": {
      "type": "Collage",
      "layers": {
        "default": ["foreground"]
      }
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "HalfLifeSec": "46"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Random Point.Vec2 -> Particles.Point",
    "Random Point.Vec2 -> Path.Point",
    "Snapshot.SnapshotTexture -> Collage.SnapshotTexture",
    "Path.Path -> Collage.Path",
    "Random Color.Vec4 -> Collage.Colour"
  ],
  
  "intents": [
    {
      "name": "Calm",
      "energy": 0.2,
      "density": 0.3,
      "structure": 0.7,
      "chaos": 0.1,
      "granularity": 0.1
    },
    {
      "name": "Energetic",
      "energy": 0.9,
      "density": 0.7,
      "structure": 0.4,
      "chaos": 0.5,
      "granularity": 0.5
    }
  ]
}

