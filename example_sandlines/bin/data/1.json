{
  "version": "1.0",
  "description": "Sandline example number 1 to contrast with number 2",
  
  "drawingLayers": {
    "foreground": {
      "size": [768, 768],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Random Radius": {
      "type": "RandomFloatSource",
      "config": {
        "CreatedPerUpdate": "0.05",
        "Min": "1.0",
        "Max": "2.0"
      }
    },
    "Audio": {
      "type": "AudioDataSource",
      "config": {
        "MinPitch": "50.0",
        "MaxPitch": "800.0",
        "MinRms": "0.0005",
        "MaxRms": "0.02"
      }
    },
    "Cluster": {
      "type": "Cluster"
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "HalfLifeSec": "231"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Sand Line": {
      "type": "SandLine",
      "config": {
        "Colour": "1.0,0.2,0.5,0.2",
        "Density": "0.4",
        "AlphaMultiplier": "0.5"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Random Radius.Float -> Sand Line.PointRadius",
    "Audio.PitchRmsPoint -> Cluster.Point",
    "Cluster.ClusterCentre -> Sand Line.Point"
  ]
}
