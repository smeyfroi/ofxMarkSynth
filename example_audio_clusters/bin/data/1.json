{
  "version": "1.0",
  "description": "Audio data with clusters visualised as points",
  
  "drawingLayers": {
    "foreground": {
      "size": [768, 768],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": false,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Audio": {
      "type": "AudioDataSource",
      "config": {
        "MinPitch": "50.0",
        "MaxPitch": "800.0",
        "MinRms": "0.0005",
        "MaxRms": "0.02"
      }
    },
    "Cluster": {
      "type": "Cluster"
    },
    "Point": {
      "type": "SoftCircle",
      "config": {
        "Colour": "1.0,0.2,0.5,0.2",
        "ColourMultiplier": "1.0",
        "AlphaMultiplier": "0.7",
        "Softness": "0.2"
      },
      "layers": {
        "default": ["foreground"]
      }
    },
    "Fade": {
      "type": "Fade",
      "config": {
        "Alpha": "0.003"
      },
      "layers": {
        "default": ["foreground"]
      }
    }
  },
  
  "connections": [
    "Audio.PitchRmsPoint -> Cluster.Point",
    "Cluster.ClusterCentre -> Point.Point"
  ]
}
