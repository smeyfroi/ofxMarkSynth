{
  "version": "1.0",
  "name": "Text Synth",
  "description": "Static text example",
  "agency": 0.5,
  
  "drawingLayers": {
    "textLayer": {
      "size": [768, 768],
      "internalFormat": "GL_RGBA32F",
      "wrap": "GL_CLAMP_TO_EDGE",
      "clearOnUpdate": true,
      "blendMode": "OF_BLENDMODE_ALPHA",
      "useStencil": false,
      "numSamples": 0,
      "isDrawn": true
    }
  },

  "mods": {
    "Title Source": {
      "type": "StaticTextSource",
      "config": {
        "Text": "Hello World",
        "EmitOnce": "true",
        "Delay": "0.5"
      }
    },
    "Text Display": {
      "type": "Text",
      "config": {
        "FontSize": "0.08",
        "Position": "0.5,0.5",
        "Colour": "1.0,0.9,0.5,1.0",
        "Alpha": "1.0"
      },
      "layers": {
        "default": ["textLayer"]
      }
    },
    "Random Color": {
      "type": "RandomHslColor",
      "config": {
        "CreatedPerUpdate": "0.5"
      }
    },
    "Random Position": {
      "type": "RandomVecSource",
      "config": {
        "CreatedPerUpdate": "0.05"
      }
    }
  },
  
  "connections": [
    "Title Source.Text -> Text Display.Text",
    "Random Color.Vec4 -> Text Display.Colour",
    "Random Position.Vec2 -> Text Display.Position"
  ]
}
